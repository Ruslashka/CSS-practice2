<header class="header">
    <div>
        {{>logo}}
    </div>

    <nav class="header_nav">
        <div class=" header_nav_right">
            {{!-- {{>nav list=header isVertical=true}} --}}
            {{>nav list=header}}
        </div>
    </nav>
</header>

{{#with main}}
<div class="main">
    <div class="main_content">
        <h1 class="main_title">{{heading}}</h1>
        <p class="main_text">{{description}}</p>
        <a href="{{href}}" class="button main_button">{{button}}</a>
    </div>
    <img src="{{image}}" alt="Main image" class="main_image">
</div>
{{/with}}

<main class="blog">
    {{#each featured}}
    {{> featuredCard data=this}}
    {{/each}}
</main>

{{#each actions}}
<div class="actions">
    <div class="actions_content">
        <h3 class="actions_title">{{heading}}</h3>
    </div>
    <div class="actions_action">
        <a href="{{url}}" class="button actions_button">{{text}}</a>
    </div>
</div>
{{/each}}


<footer class="footer">
    <div>
        {{>logo}}
        <span class="footer_copyright">Copyright 2023-2024</span>
    </div>

    {{#each footer}}
    <div>
        <span class="footer_title">{{title}}</span>
        {{>nav list=links isVertical=true}}
    </div>
    {{/each}}
</footer>